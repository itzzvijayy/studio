rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * VISION-AI CLEAN MADURAI - SECURITY RULES
     *
     * This ruleset enforces a strict User-Ownership model.
     * Redeployment triggered to ensure synchronization.
     */

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function incomingData() {
      return request.resource.data;
    }

    function existingData() {
      return resource.data;
    }

    // --- COLLECTION RULES ---

    /**
     * @path /users/{userId}
     * Private profiles: only the user can read/write their own document.
     */
    match /users/{userId} {
      // Path-based ownership check for single document access
      allow get: if isOwner(userId);
      
      // List is generally not needed for users collection in this app
      allow list: if isOwner(userId);
      
      allow create: if isOwner(userId) && incomingData().id == userId;
      allow update: if isOwner(userId) && incomingData().id == existingData().id;
      allow delete: if isOwner(userId);
    }

    /**
     * @path /complaints/{complaintId}
     * Complaints: secured by a 'userId' field within each document.
     * Forces the client to use .where('userId', '==', auth.uid) for list operations.
     */
    match /complaints/{complaintId} {
      
      // Use resource.data to verify ownership for both individual get and collection listing.
      // This enforces the 'Rules are not Filters' principle.
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Ensure new complaints are correctly linked to the submitter.
      allow create: if isSignedIn() && incomingData().userId == request.auth.uid;

      // Only the submitter can update or delete their own reports.
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}