rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * VISION-AI CLEAN MADURAI - SECURITY RULES
     * Ensuring public visibility for city cleanup reports while protecting user data.
     * Split 'read' into 'get' and 'list' for explicit permission handling.
     * Deployment Trigger: 2024-05-20T14:30:00Z-v10
     */

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // Allow users to manage their own profile data
      allow get, write: if request.auth != null && request.auth.uid == userId;
      // Prevent listing all users for privacy
      allow list: if false;
    }

    match /complaints/{complaintId} {
      // Explicitly allow both fetching a single report and listing the collection
      // for any authenticated citizen (including anonymous users)
      allow get: if request.auth != null;
      allow list: if request.auth != null;

      // Allow report creation if the user is authenticated
      allow create: if request.auth != null;

      // Only allow the original reporter to update or delete their entry
      // This uses the 'userId' field stored within the document
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}