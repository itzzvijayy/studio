
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * MADURAI CIVIC ACTION - CONSOLIDATED SECURITY RULES
     * Allows authenticated citizens full read/write access to facilitate city-wide cleanup.
     * Version: 2024-05-22T16:00:00Z
     */
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
