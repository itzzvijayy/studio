
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * MADURAI CIVIC ACTION - CITIZEN EMPOWERMENT RULES
     * Ensures public feed access while protecting private profiles.
     * Version: 2024-05-23T10:00:00Z
     */

    // Public feed: Anyone signed in can view all reports
    match /complaints/{complaintId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Only the reporter or authorized council (placeholder) can update status
      // For now, allow owners to update their own reports
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // User profiles: Only the citizen themselves can read or update their record
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default: block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
