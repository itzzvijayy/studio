rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * VISION-AI CLEAN MADURAI - SECURITY RULES
     *
     * Updated to allow public reading of complaints by signed-in users,
     * while maintaining strict ownership for creating and modifying reports.
     * Triggering deployment: 2024-05-20-v2
     */

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function incomingData() {
      return request.resource.data;
    }

    function existingData() {
      return resource.data;
    }

    // --- COLLECTION RULES ---

    /**
     * @path /users/{userId}
     * Private profiles: only the user can read/write their own document.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && incomingData().id == userId;
      allow update: if isOwner(userId) && incomingData().id == existingData().id;
      allow delete: if isOwner(userId);
    }

    /**
     * @path /complaints/{complaintId}
     * Complaints: Publicly readable by all signed-in citizens,
     * but only the original reporter can update or delete.
     */
    match /complaints/{complaintId} {
      
      // Allow any signed-in user to see all reports. 
      // This supports the "Public Reports" transparency goal.
      allow read: if isSignedIn();

      // Ensure new complaints are correctly linked to the submitter.
      allow create: if isSignedIn() && incomingData().userId == request.auth.uid;

      // Only the submitter can update or delete their own reports.
      allow update, delete: if isSignedIn() && existingData().userId == request.auth.uid;
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}