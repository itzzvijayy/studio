rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * VISION-AI CLEAN MADURAI - SECURITY RULES
     * Simplified rules to ensure public visibility of city reports.
     * Triggering deployment: 2024-05-20-v3
     */

    // --- COLLECTION RULES ---

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /complaints/{complaintId} {
      // Allow any signed-in citizen to see the city's cleanup progress
      allow read: if request.auth != null;

      // Allow report creation if the user is authenticated
      allow create: if request.auth != null;

      // Only allow the original reporter to update or delete their entry
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}